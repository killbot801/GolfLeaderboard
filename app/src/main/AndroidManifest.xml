<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.utah.cs4962.golfleaderboard" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.utah.cs4962.golfleaderboard.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateAccount"
                  android:label="@string/createAccount"/>
        <activity android:name=".CreateJoinTournament"
                  android:label="Create/Join Tournament"/>
        <activity android:name=".CreateTournament"
                  android:label="Create Tournament"/>
        <activity android:name=".SetupTournamentValues"
                  android:label="Setup Tournament Value"/>
    </application>

</manifest>
