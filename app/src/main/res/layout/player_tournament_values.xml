<RelativeLayout
    android:id="@+id/tournament_value_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:configChanges="orientation|screenSize">

    <TextView
        android:id="@+id/leaderboardTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/apptheme_textfield_default_holo_light"
        android:clickable="true"
        android:onClick="launchLeaderboard"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/leaderboardTextView"
        android:layout_weight="1">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/apptheme_list_activated_holo"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#fff"/>

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/submbitTournamentValues"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="submitValues"
        android:background="@drawable/apptheme_btn_default_normal_holo_light"
        android:text="Submit"
        android:clickable="true"
        />

</RelativeLayout>
